        //Displays the contents of CharDic
        public void Display()
        {
            foreach(char c in CharDic.Keys)
            {

                if (CharDic.ContainsKey(c) && CharDic[c] != ' ')
                {
                    Console.WriteLine(c + ": " + CharDic[c]);
                }
                if (CharDic[c] == ' ')
                {
                    Console.WriteLine("Space: " + CharDic[c]);
                }
            }
        }
